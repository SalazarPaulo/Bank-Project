<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="login_container" stylesheets="@../Styles/login.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.javafx.demofx.Controllers.LoginController">
   <VBox prefHeight="400.0" prefWidth="200.0" styleClass="login_logo_container" AnchorPane.bottomAnchor="0.0"
         AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
      <FontAwesomeIconView glyphName="BANK" size="30"/>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Bank"/>
   </VBox>
   <VBox layoutX="221.0" layoutY="44.0" prefHeight="350.0" prefWidth="350.0" styleClass="login_form_container"
         AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
      <Label id="choise-prompt-text" text="Choose Your Account Type:"/>
      <ChoiceBox fx:id="acc_selector" prefWidth="95.0" styleClass="account_selector"/>
      <Label fx:id="payee_address_lbl" text="Payee Address:"/>
      <TextField fx:id="payee_address_fid" styleClass="input_field"/>
      <Label text="Password:"/>
      <PasswordField fx:id="password_fid" styleClass="input_field"/>
      <Button fx:id="login_btn" mnemonicParsing="false" text="Button"/>
      <Label fx:id="error_lbl" styleClass="error_lbl"/>
   </VBox>
</AnchorPane>
